package main;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;
import java.util.ArrayList;

public class Dictionary {

	public static ArrayList<String> dictionary = new ArrayList<String>();
	
	public static void load() throws IOException {
		System.out.print("Loading dictionary... 0 / 69903");
		BufferedReader br = null;
		br = new BufferedReader(new FileReader("C:\\Users\\Camden\\Documents\\GitHub\\cryptography_program-Calculus_BC\\Cryptography_Project\\src\\main\\dictionary.txt"));
		String currentLine;
		int i = 0;
		while ((currentLine = br.readLine()) != null) {
			dictionary.add(currentLine);
			if (i < 10) {
				
			} else if (i < 100) {
				
			} else if (i < 1000) {
				
			} else if (i < 10000) {
				
			} else {
				
			}
			System.out.print(i + " / 69903");
		}
		try {
			br.close();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
	public static boolean searchDictionary(String word) {
		boolean wordExists = false;
		System.out.println(word);
		for (int i = 0; i < dictionary.size(); i++) {
			if (dictionary.get(i).equals(word)) {
				wordExists = true;
				break;
			}
		}
		
		return wordExists;
	}
	
}
